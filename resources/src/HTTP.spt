class HTTP {
    method ~get {
        # it would be nice to use BusyBox's wget on Alpine
        # But it's too broken.
        ${ $*curl -sL $self }
    }

    method get-file(:$to --> File) {
        ${
            $*curl -sL -w '%{filename_effective}'
            ($to ?? "-o$to" !! '-O') $self
        }
    }

    method redirect-url(-->HTTP) {
        ${ $*curl -Isw '%{redirect_url}' -o '/dev/null' $self }
    }

    method ?is-https {
        $self.starts-with('https');
    }
}
